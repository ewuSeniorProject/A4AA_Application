<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A4AA_Application.Login.CreateAccountPage">
    <ContentPage.Content>
        <StackLayout  HorizontalOptions ="CenterAndExpand" >
            <Label Text="Create Login!" FontSize="Large"/>
            <StackLayout VerticalOptions="CenterAndExpand">
                <Entry x:Name ="fname" Placeholder="First Name"/>
                <Entry x:Name ="lname" Placeholder="Last name"/>
                <Entry x:Name ="username" Placeholder="Username"/>
                <Entry x:Name ="password" Placeholder="Password" IsPassword="True"/>
                <Entry x:Name ="password2" Placeholder="Re-Enter Password" IsPassword="True"/>
                <Entry x:Name ="email" Placeholder="Email"/>
                <Entry x:Name ="email2" Placeholder="Confirm Email"/>
                <Button Text="Create Account" Clicked="OnClicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage> 